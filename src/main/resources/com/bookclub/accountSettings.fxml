<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bookclub.controller.AccountSettingsController"
            style="-fx-background-color: aliceblue">

    <left>
        <fx:include fx:id="navBar" source="navigatorBar.fxml"/>
    </left>
    <center>
        <VBox spacing="20" alignment="CENTER">
            <Label text="Account Settings" style="-fx-font-size: 24;"/>
            <GridPane vgap="10" hgap="10">
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="usernameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </GridPane>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Save Changes" onAction="#onSaveButton"/>
                <Button text="Sign Out" onAction="#onSignOutButton"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>