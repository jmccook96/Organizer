<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bookclub.controller.RegisterController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Register New User" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Label text="Username:"/>
        <TextField fx:id="usernameField"/>

        <Label text="Password:"/>
        <PasswordField fx:id="passwordField"/>

        <Label text="Confirm Password:"/>
        <PasswordField fx:id="confirmPasswordField"/>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Register" onAction="#handleRegister"/>
            <Button text="Back to Login" onAction="#handleBackToLogin"/>
        </HBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
    </VBox>

</AnchorPane>