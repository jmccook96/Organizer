<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.bookclub.controller.ChatController"
      spacing="10" alignment="CENTER" style="-fx-padding: 10;">
    <ListView fx:id="messageListView" VBox.vgrow="ALWAYS"/>
    <HBox spacing="10">
        <TextField fx:id="messageInputField" HBox.hgrow="ALWAYS"/>
        <Button text="Send" onAction="#handleSendMessage"/>
    </HBox>
</VBox>