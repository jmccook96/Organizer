<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bookclub.controller.BookItemController"
            stylesheets="@styles/bookItem.css">
    <left>
        <Button fx:id="backButton" onAction="#handleBackButton">
            <graphic>
                <ImageView fx:id="backIcon" preserveRatio="true" smooth="true">
                    <Image url="@images/back.png"/>
                </ImageView>
            </graphic>
        </Button>
    </left>
    <center>
        <VBox alignment="CENTER">
            <Label fx:id="bookLabel" alignment="TOP_CENTER"/>
            <HBox alignment="CENTER" spacing="50">
                <fx:include source="review.fxml"/>
                <fx:include source="bookProgress.fxml"/>
            </HBox>
        </VBox>

    </center>
</BorderPane>
