<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<HBox xmlns="http://javafx.com/fxml"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bookclub.controller.NavigatorBarController"
      alignment="CENTER_LEFT" stylesheets="@styles/navigatorBar.css">
    <VBox fx:id="navBarVBox" spacing="1" alignment="CENTER_LEFT" prefWidth="200">
        <Button fx:id="accountButton" onAction="#navigateAccount">
            <graphic>
                <ImageView fx:id="accountIcon" preserveRatio="true" smooth="true">
                    <Image url="@images/user.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="booksButton" onAction="#navigateBooks">
            <graphic>
                <ImageView fx:id="booksIcon" preserveRatio="true" smooth="true">
                    <Image url="@images/book.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="homeButton" onAction="#navigateHome">
            <graphic>
                <ImageView fx:id="homeIcon" preserveRatio="true" smooth="true">
                    <Image url="@images/home.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="eventsButton" onAction="#navigateEvents">
            <graphic>
                <ImageView fx:id="eventsIcon" preserveRatio="true" smooth="true">
                    <Image url="@images/calendar.png"/>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="chatButton" onAction="#navigateChat">
            <graphic>
                <ImageView fx:id="chatIcon" preserveRatio="true" smooth="true">
                    <Image url="@images/chat.png"/>
                </ImageView>
            </graphic>
        </Button>
    </VBox>
</HBox>
