<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/fxml"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bookclub.controller.NavigatorBarController"
      alignment="CENTER_LEFT" prefHeight="-Infinity">
<VBox xmlns="http://javafx.com/fxml"
      spacing="1" alignment="CENTER" prefWidth="55">
    <Button fx:id="accountButton" text="Account" onAction="#navigateAccount" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
    <Button fx:id="booksButton" text="Books" onAction="#navigateBooks" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
    <Button fx:id="homeButton" text="Home" onAction="#navigateHome" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
    <Button fx:id="eventsButton" text="Events" onAction="#navigateEvents" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>
    <Button fx:id="chatButton" text="Chat" onAction="#navigateChat" maxWidth="Infinity" maxHeight="Infinity" VBox.vgrow="ALWAYS"/>    
</VBox>
    <Separator orientation="VERTICAL" HBox.hgrow="NEVER"/>
</HBox>