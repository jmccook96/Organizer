<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bookclub.controller.LoginController">
    <children>
        <!-- Username Field -->
        <Label text="Username:" layoutX="50" layoutY="100" />
        <TextField fx:id="usernameField" layoutX="150" layoutY="100" />

        <!-- Password Field -->
        <Label text="Password:" layoutX="50" layoutY="150" />
        <PasswordField fx:id="passwordField" layoutX="150" layoutY="150" />

        <!-- Email Field -->
        <Label text="Email:" layoutX="50" layoutY="200" />
        <TextField fx:id="emailField" layoutX="150" layoutY="200" /> <!-- New email field -->

        <!-- Buttons -->
        <Button text="Login" layoutX="150" layoutY="250" onAction="#handleLogin" />
        <Button text="Register" layoutX="250" layoutY="250" onAction="#handleRegister" />
    </children>
</AnchorPane>

